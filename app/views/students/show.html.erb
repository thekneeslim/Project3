<div class="container">
  <%= render "partials/verticleColumn" %>

  <!-- ============ FIRST EDIT BOX ============ -->
  <div class="offset-md-1 col-md-8">
    <h3 id="titleHeader">General Information</h3>
    <div class="card">
      <div class="card-header">
        General Information
      </div>
      <div class="card-block">
        <table>
            <tr>
              <th class="tableHeaderWidth">First Name:</th>
              <td><%= @student.first_name %></td>
            </tr>
            <tr>
              <th class="tableHeaderWidth">Last Name:</th>
              <td><%= @student.last_name %></td>
            </tr>
            <tr>
              <th class="tableHeaderWidth">Contact:</th>
              <td><%= @student.contact %></td>
            </tr>
            <tr>
              <th class="tableHeaderWidth">Email:</th>
              <td><%= @student.email %></td>
            </tr>
          </tbody>
        </table>
        <button type="button" class="btn pinkColour editButton" data-toggle="modal" data-target="#generalInfoEdit">
          Edit
        </button>
      </div>

      <!-- MODAL -->
      <div class="modal fade" id="generalInfoEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">General Information</h4>
            </div>
            <!-- ============ FORM ============ -->
            <%= form_for(@student) do |f| %>

              <div class="modal-body">
                <div class="form-group row field">
                    <%= f.label :first_name, class: "col-xs-3 col-form-label" %>
                    <%= f.text_field :first_name, value: current_student.first_name, class: 'col-xs-8'%>
                </div>
                <div class="form-group row field">
                    <%= f.label :last_name, class: "col-xs-3 col-form-label" %>
                    <%= f.text_field :last_name, value: current_student.last_name, class: 'col-xs-8'%>
                </div>
                <div class="form-group row field">
                    <%= f.label :contact, class: "col-xs-3 col-form-label" %>
                    <%= f.text_field :contact, value: current_student.contact, class: 'col-xs-8'%>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn pinkColour">Save changes</button>
              </div>
            <!-- ============ FORM END ============ -->
            <%end%>
          </div>
        </div>
      </div>
        <!-- ============ MODAL END ============ -->
    </div>

    <!-- ============ SECOND EDIT BOX ============ -->
    <div class="card">
      <div class="card-header">
        Website Links
      </div>
      <div class="card-block">
        <table>
            <tr>
              <th class="tableHeaderWidth">Linkedin:</th>
              <td><%= @student.linkedin %></td>
            </tr>
            <tr>
              <th class="tableHeaderWidth">Github:</th>
              <td><%= @student.github %></td>
            </tr>
            <tr>
              <th class="tableHeaderWidth">Personal Website:</th>
              <td><%= @student.website %></td>
            </tr>
          </tbody>
        </table>
        <button type="button" class="btn pinkColour editButton" data-toggle="modal" data-target="#linkEdit">
          Edit
        </button>
      </div>
      <!-- MODAL -->
      <div class="modal fade" id="linkEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">General Information</h4>
            </div>
            <!-- ============ FORM ============ -->
            <%= form_for(@student) do |f| %>

            <div class="modal-body">
              <div class="form-group row field">
                <%= f.label :linkedin, class: "col-xs-3 col-form-label" %>
                <%= f.text_field :linkedin, value: current_student.linkedin, class: 'col-xs-8'%>
              </div>
              <div class="form-group row field">
                <%= f.label :github, class: "col-xs-3 col-form-label" %>
                <%= f.text_field :github, value: current_student.github, class: 'col-xs-8'%>
              </div>
              <div class="form-group row field">
                <%= f.label :website, class: "col-xs-3 col-form-label" %>
                <%= f.text_field :website, value: current_student.website, class: 'col-xs-8'%>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn pinkColour">Save changes</button>
            </div>
            <!-- ============ FORM END ============ -->
            <%end%>
          </div>
        </div>
      </div>
      <!-- ============ MODAL END ============ -->
  </div>

  <!-- ============ THIRD EDIT BOX ============ -->
  <div class="card">
    <div class="card-header">
      Description
    </div>
    <div class="card-block">
      <table>
          <tr>
            <th class="tableHeaderWidth">Description:</th>
            <td><%= @student.description %></td>
          </tr>
        </tbody>
      </table>
      <button type="button" class="btn pinkColour editButton" data-toggle="modal" data-target="#descriptionEdit">
        Edit
      </button>
    </div>
  </div>
  <!-- MODAL -->
  <div class="modal fade" id="descriptionEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Description</h4>
      </div>
      <!-- ============ FORM ============ -->
      <%= form_for(@student) do |f| %>

        <div class="modal-body">
          <div class="form-group row field">
              <%= f.label :description, class: "col-xs-3 col-form-label" %>
              <%= f.text_area :description, value: current_student.description, class: 'col-xs-8'%>
          </div>
          <p class="smallText">Under 100 words</p>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn pinkColour">Save changes</button>
        </div>
      <!-- ============ FORM END ============ -->
      <%end%>
    </div>
</div>



